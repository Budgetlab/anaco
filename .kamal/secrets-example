#!/bin/bash

# Fichier de secrets pour Kamal
# Copiez ce fichier vers .kamal/secrets et remplissez les valeurs
# ATTENTION: Ne commitez JAMAIS le fichier .kamal/secrets dans git!

# Docker Hub password pour push des images
export KAMAL_REGISTRY_PASSWORD="your_dockerhub_password_or_token"

# Rails secret key base (générez avec: rails secret)
export SECRET_KEY_BASE="your_secret_key_base_from_rails_secret"

# URL de connexion à la base de données PostgreSQL
# Format: postgresql://user:password@host:port/database
# Utilisez la même DB que votre app Cloud Run
export DATABASE_URL="postgresql://user:password@host:5432/anaco_production"

# Rails master key pour décrypter credentials.yml.enc
# Trouvez-la dans config/master.key ou RAILS_MASTER_KEY sur Cloud Run
export RAILS_MASTER_KEY="your_rails_master_key_from_config_master_key"
