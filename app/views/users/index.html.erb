<% content_for :title do %>Ajout des fichiers utilisateurs | Anaco <% end %>
<main role="main" class="containtAll">
  <div class="fr-container fr-mt-7w">
    <div class="fr-col-lg-10 fr-col-offset-lg-1">
      <h1>Ajouter un nouveau document</h1>
			<h2>Importer les utilisateurs</h2>
     <div>
      <%= form_tag import_users_path, multipart: true do %>
      	<div class="fr-upload-group">
						<label class="fr-label" for="file-upload">Ajouter le fichier
								<span class="fr-hint-text">Formats supportés : xlsx. </span>
						</label>
						<%= file_field_tag  :file, accept: '.xlsx', class: "fr-upload", id: "file-upload" %>
				</div>
        <div class="fr-my-4w"><%= submit_tag "Transmettre", class:"fr-btn" %></div>
			 <% end %>
    </div>

			<h2>Modifier les noms des utilisateurs</h2>
			<div>
				<%= form_tag import_nom_users_path, multipart: true do %>
					<div class="fr-upload-group">
						<label class="fr-label" for="file-upload2">Ajouter le fichier
							<span class="fr-hint-text">Formats supportés : xlsx. </span>
						</label>
						<%= file_field_tag  :file, accept: '.xlsx', class: "fr-upload", id: "file-upload2" %>
					</div>
					<div class="fr-my-4w"><%= submit_tag "Transmettre", class:"fr-btn" %></div>

				<% end %>
			</div>

    <div class="fr-my-4w"><%= User.all.count%> utilisateurs : <%= User.all.pluck(:nom) %></div>
</div>
</div>
</main>