<div class="fr-container" >
  <nav role="navigation" class="fr-breadcrumb" aria-label="vous êtes ici :">
    <button class="fr-breadcrumb__button " aria-expanded="false" aria-controls="breadcrumb-1" title="voir le fil d'ariane">Voir le fil d’Ariane</button>
    <div class="fr-collapse" id="breadcrumb-1">
      <ol class="fr-breadcrumb__list">
        <li>
          <%= link_to root_path, class:"fr-breadcrumb__link" do %> Accueil <%end %>
        </li>
        <li>
          <%= link_to bops_path, class:"fr-breadcrumb__link" do %> BOP et avis <%end %>
        </li>
        <li>
          <a class="fr-breadcrumb__link" aria-current="page">Formulaire début de gestion</a>
        </li>
      </ol>
    </div>
  </nav>
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-12">
      <h1>Formulaire début de gestion 2023</h1>
      <div class="fr-h3 fr-mb-0">BOP n°<%= @bop.code%></div>
    </div>
  </div>
  <%= form_with(url: bop_path(@bop), method: :patch) do |f|%>
    <div class="fr-grid-row fr-grid-row--gutters fr-mb-4w" data-controller="form2">
      <div class="fr-col-12 fr-col-lg-4">
        <div class="fr-select-group">
          <label for="dotation" class="fr-label">Dotation du BOP*
            <span class="fr-hint-text">Si le BOP est non doté, il n'y aura alors pas d'avis sur celui-ci et sera considéré comme un BOP inactif.</span></label>
          <%= f.select :dotation,[["- sélectionner -",""],['BOP doté en HT2 et T2','complete'],['BOP doté uniquement en HT2','HT2'],['BOP doté uniquement en T2','T2'], ['BOP non doté','aucune']],{selected: @bop.dotation},{data: {'form2-target': 'dotation',action: "change->form2#changeDotation",  }, class:"fr-select", id:"dotation"} %>
        </div>
        <div><%= f.submit "Valider et continuer", class: "fr-btn bouton_inactive",data: {'form2-target': "submitBouton"}, aria: { label: "Valider et continuer"}, disabled: true %></div>
      </div>
    </div>
  <%end %>
</div>