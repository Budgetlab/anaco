<div class="fr-container">
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-12">
      <h1 class="fr-mt-6w fr-mb-2w ">Liste des schémas de fin de gestion</h1>
      <div class="fr-mb-4w">
        <div class="fr-card">
          <div class="fr-card__body">
            <div class="fr-card__content">
              <h3 class="fr-card__title">Il vous
                reste <%= pluralize(@programmes.count - current_user.programmes_with_schemas, 'proposition', plural: 'proposition') %>
                de contribution au schéma fin de gestion <%= Date.today.year %> à rédiger</h3>
              <div class="fr-card__desc">
                <% @programmes&.each do |programme| %>
                  <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle">
                    <div class="fr-col-lg-2 fr-col-12">
                      <ul>
                        <li>Programme n°<%= programme.numero %></li>
                      </ul>
                    </div>
                    <div class="fr-col-lg-3 fr-col-4">
                      <% last_schema = programme.schemas&.where(annee: Date.today.year)&.order(created_at: :desc)&.first %>
                      <% if last_schema.nil? || last_schema.new?%>
                        <p class="fr-badge fr-badge--warning fr-badge--no-icon">
                          <span class="fr-icon-edit-fill fr-icon--sm" aria-hidden="true"></span> Schema fin de gestion
                        </p>
                      <% elsif last_schema&.complete? %>
                        Version n°<%= numero_version(last_schema) %>
                        du <%= last_schema.created_at.strftime("%d/%M%Y") %>
                      <% elsif last_schema&.incomplete? %>
                        <p class="fr-badge fr-badge--new fr-badge--no-icon">Brouillon</p>
                      <% end %>
                    </div>
                    <div class="fr-col-lg-3 fr-col-4">
                      <% if last_schema.nil? || last_schema&.complete?%>
                        <%= link_to programme_schemas_path(programme.id), data: { 'turbo_method': :post }, class: 'fr-btn' do %>
                          Rédiger une proposition
                        <% end %>
                      <% elsif last_schema.new? %>
                        <%= link_to new_schema_gestion_schema_path(last_schema), class: 'fr-btn' do %>Rédiger une proposition
                        <% end %>
                      <% elsif last_schema&.incomplete? %>
                        <%= link_to new_schema_gestion_schema_path(last_schema), class: 'fr-btn' do %>Reprendre le brouillon
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>