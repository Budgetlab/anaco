<%= turbo_frame_tag :modal, target: "_top" do %>
  <div class="fr-container fr-container--fluid fr-container-md">
    <div class="fr-grid-row fr-grid-row--center">
      <div class="fr-col-12 fr-col-md-10">
        <div class="fr-modal__body">
          <div class="fr-modal__header">
            <button class="fr-btn--close fr-btn" aria-controls="fr-modal-2">Fermer</button>
          </div>
          <div class="fr-modal__content">
            <h1 id="fr-modal-2-title" class="fr-modal__title">
              <span class="fr-icon-arrow-right-line fr-icon--lg"></span>
              Schéma de fin de gestion du programme n°<%= @schema.programme.numero %> <span class="fr-text--italic fr-text--light">(version n°<%= numero_version(@schema) %> du <%= l(@schema.updated_at, format: "%e/%m/%y") %>)</span>
            </h1>
            <div class="fr-tabs">
              <ul class="fr-tabs__list" role="tablist" aria-label="[A modifier | nom du système d'onglet]">
                <% if @vision_rprog_ht2 %>
                  <li role="presentation">
                    <button id="tabpanel-404" class="fr-tabs__tab" tabindex="0" role="tab" aria-selected="true" aria-controls="tabpanel-404-panel">Vision
                      HT2
                    </button>
                  </li>
                <% end %>
                <% if @vision_rprog_t2 %>
                  <li role="presentation">
                    <button id="tabpanel-405" class="fr-tabs__tab" tabindex="-1" role="tab" aria-selected="false" aria-controls="tabpanel-405-panel">Vision
                      T2
                    </button>
                  </li>
                <% end %>
              </ul>
              <% if @vision_rprog_ht2 %>
                <div id="tabpanel-404-panel" class="fr-tabs__panel fr-tabs__panel--selected" role="tabpanel" aria-labelledby="tabpanel-404" tabindex="0">
                  <%= render partial: 'show_vision', locals: { vision: 'HT2', vision_rprog: @vision_rprog_ht2, vision_cbcm: @vision_cbcm_ht2 } %>
                </div>
              <% end %>
              <% if @vision_rprog_t2 %>
                <div id="tabpanel-405-panel" class="fr-tabs__panel" role="tabpanel" aria-labelledby="tabpanel-405" tabindex="0">
                  <%= render partial: 'show_vision', locals: { vision: 'T2', vision_rprog: @vision_rprog_t2, vision_cbcm: @vision_cbcm_t2 } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>