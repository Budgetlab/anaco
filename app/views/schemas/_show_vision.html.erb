            <tr data-row-key="<%= index + 1 %>">
              <th class="fr-cell--fixed" scope="row"><%= item[:title] %></th>
              <td class="fr-cell--right">
                <%= format_number(vision_rprog.send(item[:ae_attr])) %>
              </td>
              <td class="fr-cell--right">
                <%= format_number(vision_rprog.send(item[:cp_attr])) %>
              </td>
              <td class="fr-cell--right">
