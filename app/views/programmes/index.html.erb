<% content_for :title do %>Crédits non répartis aux programmes | ANACO <% end %>
<div class="fr-container">
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-12">
      <h1 class="fr-mt-6w fr-mb-2w title-btn">
        <div>Liste des crédits non répartis aux programmes</div>
        <nav role="navigation" class="fr-pagination" aria-label="Pagination">
          <ul class="fr-pagination__list">
            <li>
              <%= link_to programmes_path(date: 2023), class: "fr-pagination__link", aria: (@annee_a_afficher == 2023 ? { current: 'page' } : {}) do %>
                2023
              <%end %>
            </li>
            <li>
              <%= link_to programmes_path(date: 2024), class: "fr-pagination__link",aria: (@annee_a_afficher == 2024 ? { current: 'page' } : {}) do %>
                2024
              <%end %>
            </li>
          </ul>
        </nav>
      </h1>
      <% if @annee_a_afficher == @annee %><h2 class='fr-h3'>Nous sommes en phase de <%= @phase %> <%= @annee %></h2><%end %>
      <div class="fr-mb-4w">
      <div class="fr-card">
        <div class="fr-card__body">
          <div class="fr-card__content">
            <h3 class="fr-card__title">Il vous reste XX crédits non répartis à remplir</h3>
              <div class="fr-card__desc">
                <% @programmes.each do |programme| %>
                <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--middle">
                  <div class="fr-col-lg-2 fr-col-12"><ul><li>Programme <%= programme.numero %></li></ul></div>
                  <div class="fr-col-lg-3 fr-col-4"></div>
                  <div class="fr-col-lg-2 fr-col-4"></div>
                  <div class="fr-col-lg-2 fr-col-4"></div>
                </div>
                <% end %>
              </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>