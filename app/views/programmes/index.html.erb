<% content_for :title do %>Restitutions par programme | ANACO  <% end %>
<main>
  <div class="fr-container">
    <h2 class="fr-mt-6w fr-mb-2w">Les programmes [<%= @programmes&.length %>]</h2>
    <div class="fr-grid-row fr-grid-row--gutters">
      <% @programmes.each do |programme| %>
        <div class="fr-col-12 fr-col-lg-3">
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <div class="fr-card__start">
                  <ul class="fr-badges-group">
                    <li>
                      <p class="fr-badge fr-badge--purple-glycine"><%= pluralize(programme.avis&.length,'avis/note rempli', plural: 'avis/notes remplis') %> </p>
                    </li>
                  </ul>
                  <p class="fr-card__detail fr-icon-arrow-right-line"><%= programme.bops&.length %> BOP (<%= pluralize(programme.bops&.length,'BOP inactif', plural: 'BOP inactifs')  %>)</p>
                </div>
                <h3 class="fr-card__title">Programme nÂ°<%= programme.numero %> </h3>
                <div class="fr-card__desc"> <%= programme.nom %></div>
              </div>
              <div class="fr-card__footer">
                <ul class="fr-links-group">
                  <li>
                    <%= link_to programme_path(programme), class: "fr-link fr-icon-arrow-right-line fr-link--icon-right" do %> Afficher <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <%end  %>
    </div>
  </div>
</main>