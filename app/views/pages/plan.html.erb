<% content_for :title do %>Plan du site | ANACO <% end %>
<main role="main" class="fr-container fr-py-16v">
  <div class="fr-grid-row">
    <div class="fr-col-12 fr-col-md-8">
      <h1>Plan du site</h1>
      <div>
        <ul>
          <li><%= link_to root_path do %>Accueil<%end %></li>
          <li>BOP et avis/notes</li>
          <ul>
          <li><%= link_to bops_path do %>Liste des BOP et avis/notes<%end %></li>
          <li><%= link_to historique_path do %>Historique des avis/notes<%end %></li>
          <% if current_user.statut == "DCB" %>
            <li><%= link_to consultation_path do%>Consultation des avis/notes<%end%></li>
          <% end %>
          <% if current_user.statut == "admin" %>
            <li><%= link_to suivi_path do%>Suivi des avis/notes par contrôleur<%end%></li>
          <% end %>
          </ul>
          <% if current_user.statut != "CBR" %>
          <li>Crédits non répartis</li>
            <ul>
              <% if current_user.statut == "DCB" %>
                <li><%= link_to programmes_path do%>Liste des crédits non répartis<%end%></li>
              <% end  %>
              <li><%= link_to credits_path do%>Historique des crédits non répartis<%end%></li>
              <% if current_user.statut == "admin" %>
                <li><%= link_to credits_suivi_path do%>Suivi des crédits non répartis par DCB<%end%></li>
              <% end %>
            </ul>
          <% end  %>
          <li><%= link_to restitutions_path do %>Restitutions<%end %></li>
          <li><%= link_to faq_path do %>FAQ<%end %></li>
          <li><%= link_to plan_path do %>Plan du site<%end %></li>
          <li><%= link_to accessibilite_path do %>Déclaration d'accessibilité<%end %></li>
          <li><%= link_to mentions_legales_path do %>Mentions légales<%end %></li>
          <li><%= link_to donnees_personnelles_path do %>Gestion des données personnelles et cookies<%end %></li>
        </ul>
      </div>
    </div>
  </div>
</main>