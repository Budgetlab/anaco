<div class="fr-container" >
  <nav role="navigation" class="fr-breadcrumb" aria-label="vous êtes ici :">
    <button class="fr-breadcrumb__button " aria-expanded="false" aria-controls="breadcrumb-1" title="voir le fil d'ariane">Voir le fil d’Ariane</button>
    <div class="fr-collapse" id="breadcrumb-1">
      <ol class="fr-breadcrumb__list">
        <li>
          <%= link_to root_path, class:"fr-breadcrumb__link" do %> Accueil <%end %>
        </li>
        <li>
          <%= link_to restitutions_path, class:"fr-breadcrumb__link" do %> Restitutions <%end %>
        </li>
        <li>
          <a class="fr-breadcrumb__link" aria-current="page">Programme n°<%= @numero%></a>
        </li>
      </ol>
    </div>
  </nav>
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-12">
      <h1 class="fr-mb-2w">Restitution du programme n°<%= @numero %></h1>
      <p class="fr-tag">Ministère <%=@ministere %></p>
    </div>
  </div>
  <div class="fr-grid-row fr-grid-row--gutters" data-controller="highcharts" data-highcharts-avis="<%=@avis %>" data-highcharts-notes1="<%=@notes1 %>" data-highcharts-notes2="<%=@notes2 %>">
    <div class="fr-col-12 fr-col-lg-8">
      <div class="fr-accordion__title">Ressources allouées initiales</div>
      <hr class="fr-col_12">
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-3">
          <div class="fr-card fr-card--green fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">AE HT2 initial</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@ae_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--green fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">CP HT2 initial</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@cp_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--green fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">AE/CP T2 initial</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@t2_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--green fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">ETPT initial</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@etpt_i)%>€</p>
            </div>
          </div>
        </div>
      </div>

      <div class="fr-accordion__title fr-mt-3w">Ressources allouées fin 2023</div>
      <hr class="fr-col_12">
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-3">
          <div class="fr-card fr-card--orange fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">AE HT2 fin 2023</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@ae_f)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--orange fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">CP HT2 fin 2023</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@cp_f)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--orange fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">AE/CP T2 fin 2023</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@t2_f)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--orange fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">ETPT fin 2023</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@etpt_f)%>€</p>
            </div>
          </div>
        </div>
      </div>

      <div class="fr-accordion__title fr-mt-3w">Écarts</div>
      <hr class="fr-col_12">
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-3">
          <div class="fr-card fr-card--blue fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">Écart AE HT2</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@ae_f - @ae_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--blue fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">Écart CP HT2</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@cp_f - @cp_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--blue fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">Écart AE/CP T2</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@t2_f - @t2_i)%>€</p>
            </div>
          </div>
        </div>
        <div class="fr-col-3">
          <div class="fr-card fr-card--blue fr-p-2w fr-card--no-border">
            <div class="fr-cart__body">
              <p class="fr-text--lg fr-mb-0 text_center">Écart ETPT</p>
              <p class="fr-text--lg fr-text--bold fr-mb-0 text_center"><%= format_number(@etpt_f - @etpt_i)%>€</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="fr-col-12 fr-col-lg-4">

          <div data-highcharts-target="canvasAvis"></div>

          <% if Date.today > @date1%>
            <div data-highcharts-target="canvasNotes1"></div>
          <%end %>

          <% if Date.today > @date2%>
            <div data-highcharts-target="canvasNotes2"></div>
          <%end %>

    </div>
  </div>
  <div class="fr-grid-row fr-grid-row--gutters fr-mt-4w">
    <div class="fr-col-12 fr-col-lg-12">
      <h2 class="fr-mb-2w">Liste des <%= @bops.count %> BOP du programme</h2>
    </div>
  </div>
  <div class="fr-accordions-group fr-mb-4w">
    <% @bops.each do |bop| %>
    <section class="fr-accordion">
      <h3 class="fr-accordion__title">
        <button class="fr-accordion__btn" aria-expanded="false" aria-controls="accordion-<%=bop.id %>">Bop n°<%= bop.code %>
          <% if bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").count > 0 %>
            <% if bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").first.statut == "Favorable" %>
              <p class="fr-badge fr-badge--success fr-badge--no-icon fr-ml-2w">Avis Favorable</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").first.statut == "Favorable avec réserve" %>
              <p class="fr-badge fr-badge--new fr-badge--no-icon fr-ml-2w">Avis Favorable avec réserve</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").first.statut == "Défavorable" %>
              <p class="fr-badge fr-badge--warning fr-badge--no-icon fr-ml-2w">Avis Défavorable</p>
            <% end %>
          <%end %>
          <% if bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").count > 0 %>
            <% if bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").first.statut == "Aucun risque" %>
              <p class="fr-badge fr-badge--success fr-badge--no-icon fr-ml-2w">BOP avec capacité contributive</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").first.statut == "Risques éventuels ou modérés" %>
              <p class="fr-badge fr-badge--new fr-badge--no-icon fr-ml-2w">BOP avec consommation à la ressource</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").first.statut == "Risques certains ou significatifs" %>
              <p class="fr-badge fr-badge--warning fr-badge--no-icon fr-ml-2w">BOP avec besoin de financement</p>
            <% end %>
          <%end %>
          <% if bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").count > 0 %>
            <% if bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").first.statut == "Aucun risque" %>
              <p class="fr-badge fr-badge--success fr-badge--no-icon fr-ml-2w">BOP avec capacité contributive</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").first.statut == "Risques éventuels ou modérés" %>
              <p class="fr-badge fr-badge--new fr-badge--no-icon fr-ml-2w">BOP avec consommation à la ressource</p>
            <% elsif bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").first.statut == "Risques certains ou significatifs" %>
              <p class="fr-badge fr-badge--warning fr-badge--no-icon fr-ml-2w">BOP avec besoin de financement</p>
            <% end %>
          <%end %>
        </button>
      </h3>
      <div class="fr-collapse" id="accordion-<%=bop.id %>">
        <p class="fr-tag fr-mb-2w"><%= bop.user.nom %></p>
        <ul class="fr-btns-group fr-btns-group--inline">
          <% if bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").count > 0 %>
            <li>
              <button class="fr-btn" data-fr-opened="false" aria-controls="modal-<%=bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").first.id %>">
                Avis début de gestion
              </button>
            </li>

          <% else %>
            <li>
              <button class="fr-btn" disabled>
                Avis début de gestion
              </button>
            </li>
          <%end %>
          <% if bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").count > 0 %>
            <li>
            <button class="fr-btn" data-fr-opened="false" aria-controls="modal-<%=bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").first.id %>">
              Note CRG1
            </button>
          </li>
          <%else %>
            <li>
              <button class="fr-btn" disabled>
                Note CRG1
              </button>
            </li>
          <%end %>
          <% if bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").count > 0 %>
            <li>
            <button class="fr-btn" data-fr-opened="false" aria-controls="modal-<%=bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").first.id %>">
              Note CRG2
            </button>
          </li>
          <%else %>
            <li>
              <button class="fr-btn" disabled>
                Note CRG2
              </button>
            </li>
          <%end %>
        </ul>
        <%= render partial: 'avis/dialog_debut',locals: {avis: bop.avis.where("phase = ? AND etat != ?","Début de gestion","Brouillon").first} %>
        <%= render partial: 'avis/dialog_crg1',locals: {avis: bop.avis.where("phase = ? AND etat != ?","CRG1","Brouillon").first} %>
        <%= render partial: 'avis/dialog_crg2',locals: {avis: bop.avis.where("phase = ? AND etat != ?","CRG2","Brouillon").first} %>
      </div>
    </section>
    <%end  %>
  </div>

</div>