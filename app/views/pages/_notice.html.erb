<% date_alerte_debut_gestion = Date.new(@annee, 3, 15) %>
<% date_alerte_crg1 = Date.new(@annee, 6, 15) %>
<% if Date.today >= date_alerte_debut_gestion && Date.today < @date_crg1 && @avis_repartition[3] > 0 %>
  <div class="fr-notice fr-notice--warning">
    <div class="fr-container">
      <div class="fr-notice__body">
        <p>
          <span class="fr-notice__title">Attention, la phase de début de gestion est bientôt terminée et vous n’avez pas renseigné tous vos avis. </span>
          <%= link_to remplissage_avis_path, rel: 'noopener', class: "fr-notice__link" do %>
            Remplir mes avis
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% elsif Date.today >= @date_crg1 && @avis_repartition[3] > 0 %>
  <div class="fr-notice fr-notice--alert">
    <div class="fr-container">
      <div class="fr-notice__body">
        <p>
              <span class="fr-notice__title">
                Attention, la phase de début de gestion est terminée et vous n’avez pas renseigné tous vos avis.
              </span>
          <%= link_to remplissage_avis_path, rel: 'noopener', class: "fr-notice__link" do %>Remplir mes avis
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% elsif Date.today >= date_alerte_crg1 && Date.today < @date_crg2 && @notes_crg1[3] > 0 %>
  <div class="fr-notice fr-notice--warning">
    <div class="fr-container">
      <div class="fr-notice__body">
        <p>
        <span class="fr-notice__title">
          Attention, la phase de CRG1 est bientôt terminée et vous n’avez pas renseigné toutes vos notes.</span>
          <%= link_to remplissage_avis_path, rel: 'noopener', class: "fr-notice__link" do %>Remplir mes notes
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% elsif Date.today >= @date_crg2 && @notes_crg1[3] > 0 %>
  <div class="fr-notice fr-notice--alert">
    <div class="fr-container">
      <div class="fr-notice__body">
        <p>
        <span class="fr-notice__title">Attention, la phase de CRG1 est terminée et vous n’avez pas renseigné toutes vos
          notes. </span>
          <%= link_to remplissage_avis_path, rel: 'noopener', class: "fr-notice__link" do %>Remplir mes notes
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% else %>
  <div class="fr-notice fr-notice--info">
    <div class="fr-container">
      <div class="fr-notice__body">
        <p>
        <span class="fr-notice__title">Nous sommes en phase de <%= @phase %>. Vous pouvez remplir vos avis depuis la
          page</span>
          <%= link_to remplissage_avis_path, rel: 'noopener', class: "fr-notice__link" do %>Remplissage des
            avis/notes
          <% end %>
        </p>
        <button class="fr-btn--close fr-btn" title="Masquer le message" onclick="const notice = this.parentNode.parentNode.parentNode; notice.parentNode.removeChild(notice)">
          Masquer le message
        </button>
      </div>
    </div>
  </div>
<% end %>