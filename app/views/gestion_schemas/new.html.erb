<% content_for :title do %>Formulaire création de schéma de fin de gestion | ANACO
<% end %>
<main role="main" class="containtAll">
  <div class="fr-container">
    <nav role="navigation" class="fr-breadcrumb" aria-label="vous êtes ici :">
      <button class="fr-breadcrumb__button " aria-expanded="false" aria-controls="breadcrumb-1" title="voir le fil d'ariane">Voir
        le fil d’Ariane
      </button>
      <div class="fr-collapse" id="breadcrumb-1">
        <ol class="fr-breadcrumb__list">
          <li>
            <%= link_to root_path, class: "fr-breadcrumb__link" do %> Accueil
            <% end %>
          </li>
          <li>
            <%= link_to schemas_suivi_path, class: "fr-breadcrumb__link" do %> Liste des schémas de fin de
              gestion
            <% end %>
          </li>
          <li>
            <a class="fr-breadcrumb__link" aria-current="page">Rédiger un schéma de fin de gestion</a>
          </li>
        </ol>
      </div>
    </nav>
    <div class="fr-grid-row fr-grid-row--gutters fr-mb-4w">
      <div class="fr-col-12 fr-col-lg-12">
        <h1>Proposition de contribution au schéma de fin de gestion</h1>
        <div class="fr-h3 fr-mb-0">Programme <%= @programme.numero %> - <%= @programme.nom %></div>
        <div>
          <p class="fr-badge fr-badge--sm fr-badge--blue-ecume">Programme doté en <%= @programme.dotation %></p>
        </div>
      </div>
    </div>
    <% if @schema.statut == "1" %>
      <%= render 'form_cbcm_ht2' %>
    <% elsif @schema.statut == "2" %>
      <%= render 'form_rprog_ht2' %>
    <% elsif @schema.statut == "3" %>
      <%= render 'form_cbcm_t2' %>
    <% elsif @schema.statut == "4" %>
      <%= render 'form_rprog_t2' %>
    <% end %>
  </div>
</main>
