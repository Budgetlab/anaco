<div class="nested-form-wrapper fr-mb-3w" data-new-record="<%= f.object.new_record? %>">
  <div class="fr-h6">Suspension <button type="button" data-action="nested-form#remove"><span class="fr-icon-delete-bin-line fr-icon--sm cbleu"></span></button></div>
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-6">
      <div class="fr-select-group">
        <label for="date_suspension" class="fr-label">Date de suspension*</label>
        <%= f.text_field :date_suspension, class: "fr-select", data: { controller: "flatpickr"}, id: "date_suspension", placeholder: "- sélectionner -" %>
      </div>
    </div>
    <div class="fr-col-12 fr-col-lg-6">
      <div class="fr-select-group">
        <label for="motif" class="fr-label">Motif de suspension*</label>
        <%= f.select :motif, options_for_select([["- sélectionner -", ""]] + @liste_motifs_suspension.map { |decision| [decision, decision] }), {}, { id: "motif", class: "fr-select" } %>
      </div>
    </div>
  </div>
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-12">
      <div class="fr-input-group">
        <label for="observations" class="fr-label">Observations</label>
        <%= f.text_area :observations, class: 'fr-input', rows: 3 %>
      </div>
    </div>
  </div>
  <div class="fr-grid-row fr-grid-row--gutters">
    <div class="fr-col-12 fr-col-lg-6">
      <div class="fr-select-group">
        <label for="date_reprise" class="fr-label">Date de reprise</label>
        <%= f.text_field :date_reprise, class: "fr-select", data: { controller: "flatpickr"}, id: "date_reprise", placeholder: "- sélectionner -" %>
      </div>
    </div>
  </div>

  <%= f.hidden_field :_destroy %>
</div>