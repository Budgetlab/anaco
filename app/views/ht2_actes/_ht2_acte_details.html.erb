    <p class="<%= badge_class_for_etat_actes(acte.etat) %>">
      <%= acte.etat %>
    </p>
    <ul class="fr-btns-group fr-btns-group--inline fr-btns-group--icon-left  fr-mt-2w">
      <% if ['DCB', 'CBR'].include?(current_user.statut) %>
        <li>
