                <%== pagy_nav_custom(@pagy_suspendu) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="fr-grid-row fr-grid-row--gutters">
      <div class="fr-col-12 fr-col-lg-12">
        <h2 class="fr-mt-2w">Actes en attente de validation [<%= @actes_validation.length %>]</h2>
