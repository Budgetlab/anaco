<% content_for :title do %>Restitutions par ministère | ANACO <% end %>
<main>
  <div class="fr-container">
    <h1 class="fr-mt-6w">Ministères [<%= @ministeres&.length %>]</h1>
    <div class="fr-grid-row fr-grid-row--gutters">
      <% @ministeres&.each do |ministere| %>
        <div class="fr-col-12 fr-col-lg-3">
          <div class="fr-card">
            <div class="fr-card__body">
              <div class="fr-card__content">
                <div class="fr-card__start">
                  <ul class="fr-badges-group">
                    <li>
                      <p class="fr-badge fr-badge--purple-glycine">schema fin de gestion </p>
                    </li>
                  </ul>
                  <p class="fr-card__detail fr-icon-arrow-right-line"><%= ministere.programmes&.length %> programmes</p>
                </div>
                <h3 class="fr-card__title"><%= ministere.nom %> </h3>

              </div>
              <div class="fr-card__footer">
                <ul class="fr-links-group">
                  <li>
                    <%= link_to ministere_path(ministere), class: "fr-link fr-icon-arrow-right-line fr-link--icon-right" do %> Afficher <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <%end  %>
    </div>
  </div>
</main>
